@import "slider.styl"

::selection
  background red

.u-containerDefault
  max-width 800px
  margin 0 auto

.u-title
  color #00DBFF
  font-weight 400
  text-align center
  padding-bottom .5em

.MainMenu
  background #1E1E1E
  text-align center
  height 3.75em
  position fixed
  right 0
  left 0
  top 0

.MainMenu-list
  margin 0
  padding 0

.MainMenu-item
  display inline-block

.MainMenu-link
  color #00DBFF
  text-decoration none
  line-height 3.75em
  margin-right 1.75em

.Header
  margin-top 3.75em
  background-image url('../images/maraton.jpg')
  background-repeat no-repeat
  background-position center
  background-size cover
  text-align center
  padding 1.2em 0

.Header-imageContainer
  margin 0

.Header-image
  border 5px solid white
  border-radius 50%
  -webkit-transition 1s
  &:hover
    border 7px solid white
    border-color orange
    -webkit-transform rotateY(360deg)

.Header-link
  color white
  font-size 2.2em
  font-weight bold
  text-decoration none

.Header-name
  color #EA4200
  font-size 1.5em
  font-weight 600
  margin 0

.Profile
  text-align center
  padding 0 1em

.Profile-link
  background orange
  color white
  text-decoration none
  padding .5em 1em
  border-radius 2em
  margin-right .5em
  display inline-block
  margin-bottom 1em
  &.twitter
    background #55ACEE
  &.facebook
    background #4862A3
  &.github
    background black
    color white
      

.Work
  margin-top 2em
  text-align center
  &-Container
    display flex
    flex-wrap wrap
    justify-content space-around

.Work-item
  display inline-block
  //margin-right 1.8em
  margin-bottom 1.8em

.Work-imageContainer
  margin 0

.Work-description
  color #515151
  font-size 1.1em
  font-style italic

.Footer
  background-image url('../images/bg_header1.jpg')
  background-repeat no-repeat
  background-position center
  background-size cover
  text-align center
  padding 2em 0

.Footer-title
  color white


.Footer-left
  display inline-block
  max-width 32em
  text-align center
  vertical-align top

  

.Footer-form
  text-align center
  display inline-block

.Footer-formInput,
.Footer-textarea
  background white
  border none
  display block
  border-radius 2em
  padding .5em
  margin 0 auto 1em
  outline 0 //quita borde cuando hay  focus
  

.Footer-formInput

.Footer-textarea
  resize none

.Footer-button
  background orange
  color white
  border-radius 1em
  border none
  padding .5em 1em

.fuente
  font-family 'Arizonia', cursive
  text-align center
  
.Slider 
  background black
  &-container
    max-width 1280px
    margin 0 auto

@media screen and (max-width:480px)
  .Profile
    &-link
      display block
      

@media screen and (max-width:767px)
  .Footer-form
    display block
  .Footer-formInput
    width 90%
  .Work-item
    // margin-right 0
