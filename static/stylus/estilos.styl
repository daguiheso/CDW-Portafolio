@import "nib"
@import "slider.styl"
@import "fonts.styl"

::selection
  background red

.u-containerDefault
  max-width 800px
  margin 0 auto

.u-title
  color #00DBFF
  font-weight 400
  text-align center
  padding-bottom .5em

.MainMenu
  background #1E1E1E
  text-align center
  height 3.75em
  position fixed
  right 0
  left 0
  top 0
  z-index 3

.MainMenu-list
  margin 0
  padding 0

.MainMenu-item
  display inline-block

.MainMenu-link
  color #00DBFF
  text-decoration none
  line-height 3.75em
  margin-right 1.75em

.Header
  background-image url('../images/maraton.jpg')
  background-position center
  background-repeat no-repeat
  background-size cover
  margin-top 3.75em
  padding 1.2em 0
  text-align center
  &-button
    background white 
    border none
    border-radius 50%
    display none
    height 40px
    line-height 40px
    outline 0
    position fixed
    right 1em
    top 1em
    width 40px
    z-index 3
    
      
.Header-imageContainer
  margin 0

.Header-image
  border 5px solid white
  border-radius 50%
  -webkit-transition 1s
  &:hover
    border 7px solid white
    border-color orange
    transform rotateY(360deg)

.Header-link
  color white
  font-size 2.2em
  font-weight bold
  text-decoration none

.Header-name
  color #EA4200
  font-size 1.5em
  font-weight 600
  margin 0

.Profile
  text-align center
  padding 0 1em

.Profile-link
  background orange
  color white
  text-decoration none
  padding .5em 1em
  border-radius 2em
  margin-right .5em
  display inline-block
  margin-bottom 1em
  &.twitter
    background #55ACEE
  &.facebook
    background #4862A3
  &.github
    background black
    color white
  &:before
    margin-right .5em
      

.Work
  margin-top 2em
  text-align center
  &-Container
    display flex
    flex-wrap wrap
    justify-content space-around

.Work-item
  display inline-block
  //margin-right 1.8em
  margin-bottom 1.8em

.Work-imageContainer
  margin 0

.Work-description
  color #515151
  font-size 1.1em
  font-style italic

.Footer
  background-image url('../images/bg_header1.jpg')
  background-repeat no-repeat
  background-position center
  background-size cover
  text-align center
  padding 2em 0

.Footer-title
  color white


.Footer-left
  display inline-block
  max-width 32em
  text-align center
  vertical-align top

.Footer-form
  text-align center
  display inline-block  

.Footer-formInput,
.Footer-textarea
  background white
  border none
  display block
  border-radius 2em
  padding .5em
  margin 0 auto 1em
  outline 0 //quita borde cuando hay  focus
  width 90%

.Footer-textarea
  resize none

.Footer-button
  background orange
  color white
  border-radius 1em
  border none
  padding .5em 1em

.fuente
  font-family 'Arizonia', cursive
  text-align center
  
.Slider 
  background black
  &-container
    max-width 1280px
    margin 0 auto



.rslides_tabs
  background: rgba(0,0,0,.25);
  // box-shadow: 0 0 1px rgba(255,255,255,.3), inset 0 0 5px rgba(0,0,0,1.0);
  font-size: 18px;
  list-style: none;
  margin: 0 auto 50px;
  max-width: 540px;
  padding: 10px 0;
  text-align: center;
  width: 100%;
  li
    display: inline;
    float: none;
    margin-right: 1px;
    a 
      width: auto;
      line-height: 20px;
      padding: 9px 20px;
      height: auto;
      background: transparent;
      display: inline;
      text-decoration: none;
      color: white;
      &:hover
        background rgba(255,255,255,.1)

@media screen and (max-width:480px)
  .Profile
    &-link
      display block
      

@media screen and (max-width:767px)
  .Footer-form
    display block
    width 100%
  .Footer-formInput
    width 90%
  
  .Header
    margin-top 0
    &-button
      &.is-active        
        display block

  .MainMenu
    height auto
    left -200px
    width 200px
    transition .3s
    &.is-active
      left 0     
    &-item 
      display block
    
