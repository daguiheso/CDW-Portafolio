@font-face {
	font-family: 'icomoon';
	src:url('../fonts/icomoon.eot?28xmnl');
	src:url('../fonts/icomoon.eot?#iefix28xmnl') format('embedded-opentype'),
		url('../fonts/icomoon.woff?28xmnl') format('woff'),
		url('../fonts/icomoon.ttf?28xmnl') format('truetype'),
		url('../fonts/icomoon.svg?28xmnl#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
	font-family: 'icomoon';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.icon-showMenu:before {
	content: "\ea7b";
}
.icon-hideMenu:before {
	content: "\ea7c";
}
.icon-facebook:before {
	content: "\ea8d";
}
.icon-twitter:before {
	content: "\ea92";
}
.icon-github:before {
	content: "\eab3";
}
